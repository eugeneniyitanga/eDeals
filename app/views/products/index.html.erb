<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="https://s-media-cache-ak0.pinimg.com/736x/58/da/1e/58da1e8c38dc002bb3e1a92dba32963f.jpg" alt="Chania">
    </div>

    <div class="item">
      <img src= "http://i.ebayimg.com/00/s/NTAwWDUwMA==/z/Zu0AAOxyVaBSsSbm/$_35.JPG?set_id=2" alt="Chania">
    </div>

    <div class="item">
      <img src="https://www.androidcentral.com/sites/androidcentral.com/files/styles/w800h450crop/public/topic_images/2015/galaxy-s6-both-versions-5.jpg?itok=2t6DYZEw&timestamp=1429735520" alt="Samsung Galaxy S 6">
    </div>

    <div class="item">
      <img src="http://icdn7.digitaltrends.com/image/apple-iphone-7-iphone-7-plus-review-9-1500x1000.jpg" alt="Flower">
