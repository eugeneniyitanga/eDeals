<div class="row">
<div class="row">
      <% if current_user && current_user.admin %>
         <h1 style="text-align: center"><%= button_to "Add New Product", "/products/new", class: "btn btn-primary", method: :get %></h1><br>
       <% end %>
    <% @products.each_slice(3) do |three_products| %>
      <div class="row">
        <% three_products.each do |product| %>
        <div class="col-md-4">
        <h4><a href="/products/<%= product.id %>"><%= product.name %></a></h4><br>
        <h4><img class="index" src="<%= product.image %>"></h4><br>
        <h4><strong>Description:</strong> <%= product.description %><br></h4>
        <h4><strong>Price:</strong> $<%= product.price %><br></h4>
         <h4><strong>From:</strong> <%= product.seller_profile.company_name %></h4>
        <% if product.created_at > 1.week.ago%>
          <div class="sticker sticker-new"></div>
        <% end %>
      </div>
      <br>
      <% end %> 
    </div>
    <% end %> 
  </div>
   </div>
 
