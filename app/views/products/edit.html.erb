
 <div class="container">
  <div class="row">
   <div class="col-md-6">

      <%= form_tag "/products/#{@product.id}", method: :patch do %>
      <form>
      <div id="fullscreen_bg" class="fullscreen_bg"/>
      <form class="form-signin"><br>
        <h1 class="form-signin-heading text-muted" style="text-align: center"><strong>Edit Product</strong></h1>
        <h4>Product</h4><input type="name" class="form-control" name="name" value="<%= @product.name %>" placeholder="Product Name" required="" autofocus="">
         <h4>Description</h4><input type="text" class="form-control" name="description" value="<%= @product.description %>" placeholder="Add description" required="" autofocus="">
           <h4>Price</h4><br><input type="integer" class="form-control" name="price" value="<%= @product.price %>" placeholder="Price" required="" autofocus=""> 
           <br><button class="btn btn-lg btn-primary btn-block" type="submit">
          Update Product
        </button>
      </form>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>

