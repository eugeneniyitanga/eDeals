<div class="row">
 <div class="col-md-2"></div>
 <div class="col-md-8">
     <h1> <strong> Dear <%= current_user.first_name %>, you ordered: </strong></h1><br><br>
     <table class="table table-space">
         <tr>
           <th>Product Name</th>
           <th>Quantity</th>
           <th>Unit Price</th>
         </tr>
       <% @order.carted_products.each do |carted_product| %>
         <tr>
           <td><%= carted_product.product.name %></td>
           <td><%= carted_product.quantity %></td>
           <td><%= carted_product.product.price %></td>
           </tr>
           <% end %> 
           </table><br>

                <ul>
          <!-- <li>Order Number <%= @order.id %></li> -->
          <li style="font-size: 130%;"><strong>Subtotal:</strong>  <%= @order.subtotal %></li><br>
          <li style="font-size: 130%;"><strong>Tax:</strong>  <%= @order.tax %></li><br>
          <li style="font-size: 130%;"><strong>Total:</strong>  <%= @order.total %></li>
        </ul>
           </div>
           </div>