<div class="container">
  <div class="row">
   <div class="col-md-6">

      <%= form_tag "/seller_profiles/#{@seller_profile.id}", multipart: true,method: :patch do %>
      <form>
      <div id="fullscreen_bg" class="fullscreen_bg"/>
      <form class="form-signin"><br>
        <h1 class="form-signin-heading text-muted" style="text-align: center"><strong>Edit Your Profile</strong></h1>
        <h4>Company Name</h4><input type="name" class="form-control" name="company_name" value="<%= @seller_profile.company_name %>" placeholder="company_name" required="" autofocus="">
        <h4>Company Email</h4><br><input type="email" class="form-control" name="company_email" value="<%= @seller_profile.company_email %>" placeholder="Add Email Address of your Company" required="" autofocus=""> 
        <h4>Phone Number</h4><br><input type="text" class="form-control" name="phone_number" value="<%= @seller_profile.phone_number %>" placeholder="Add Your Phone Number" required="" autofocus=""> 
        <h4>Location</h4><br><input type="name" class="form-control" name="location" value="<%= @seller_profile.location %>" placeholder="Type Your Location" required="" autofocus="">
          <h4>Street Code</h4><br><input type="name" class="form-control" name="street_code" value="<%= @seller_profile.street_code %>" placeholder="Add Your Address" required="" autofocus="">
          <h4><strong>Profile Picture</h4><br><input class="form_control" type="file" name="image" value="@product.image"><br>
         </div><br>
           <br><button class="btn btn-lg btn-primary btn-block" type="submit">
          Update Product
        </button>
      </form>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
